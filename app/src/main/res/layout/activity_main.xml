<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.csulb.suitup.MainActivity"
    android:background="@drawable/suitbg">

    <TextView
        android:id="@+id/weather_information"
        android:text="@string/weather_information"
        android:textColor="#fff"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wardrobe_button" />

    <TextView
        android:id="@+id/location_information"
        android:text="@string/location_information"
        android:textColor="#fff"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wardrobe_button"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/random_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Suit Up!"
        android:background="@drawable/gradient"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Take a Picture"
        android:background="@drawable/gradient"
        android:layout_above="@+id/random_button"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/wardrobe_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Wardrobe"
        android:background="@drawable/gradient"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/camera_button"
        android:layout_alignParentStart="true" />

</RelativeLayout>
