<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_random_wardrobe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.csulb.suitup.RandomWardrobeActivity">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:text="Generated Result"
        android:textSize="24sp"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/generated_results"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exclude_button"
        android:text="Remove this combination"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generate_button"
        android:text="Go Again"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/exclude_button"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="34dp"
        android:id="@+id/generated_results"
        android:layout_above="@+id/generate_button"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:id="@+id/top_view"/>

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="230dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:id="@+id/bottom_view"/>

            <ImageView
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:id="@+id/shoes_view"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
