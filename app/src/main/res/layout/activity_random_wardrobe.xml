<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_random_wardrobe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/suitbg2"
    tools:context="edu.csulb.suitup.RandomWardrobeActivity">

    <TextView
        android:text="Suit Up Buttercup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/suit_up_text"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/generated_results"
        android:layout_below="@+id/suit_up_text"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="230dp"
            android:id="@+id/top_view"
            android:background="#000000"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="230dp"
            android:id="@+id/bottom_view"
            android:background="#000000"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="230dp"
            android:id="@+id/shoes_view"
            android:background="#000000"
            />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/generate_button"
        android:text="Go Again"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/generated_results"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient"
        android:textColor="#595959"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exclude_button"
        android:text="Remove this combination"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/generate_button"
        android:background="@drawable/gradient"
        android:textColor="#595959"/>





</RelativeLayout>
