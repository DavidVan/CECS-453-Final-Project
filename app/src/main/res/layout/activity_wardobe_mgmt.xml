<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <TextView
        android:id="@+id/viewTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View: "
        android:layout_margin="10dp"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/viewSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/viewTxtView"
        android:layout_above="@+id/wardrobe_fragment"
        android:layout_marginLeft="25dp">
    </Spinner>

    <fragment
        android:id="@+id/wardrobe_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewTxtView"
        class="edu.csulb.suitup.WardrobeFragment">
    </fragment>


</RelativeLayout>